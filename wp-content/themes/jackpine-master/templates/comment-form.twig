<div class="comment-form flex flex-col bg-gray-200 p-4 w-1/3">
    <h3 class="text-xl mb-2">Add comment</h3>
    <form class="comment-form" method="post" action="{{ site.site_url~'/wp-comments-post.php' }}">
        {% if  user %}
            <input type="hidden" name="email" value="{{ user.email }}">
            <input type="hidden" name="author" value="{{ user.name }}">
            <input type="hidden" name="url" value="{{ user.link }}">
        {% else %}
            <div class="flex flex-col justify-start">
                <div class="flex flex-row mb-4">
                    <label for="email" class="mr-8">Email:</label>
                    <input required name="email" type="email" id="email">
                </div>
                <div class="flex flex-row mb-4">
                    <label for="author" class="mr-8">Name:</label>
                    <input required name="author" type="text" id="author">
                </div>
            </div>
        {% endif %}
        <div class="flex flex-col">
            <label class="mb-4">Comment:</label>
            <textarea placeholder="Leave a comment..." name="comment" cols="60" rows="3" class="mb-4"></textarea>
        </div>
        <input name="comment_post_ID" value="{{ post.id }}" type="hidden">
        <input name="comment_parent"  value="{{ comment.ID|default('0') }}" type="hidden">
        <button type="submit" name="submit" class="px-6 py-2 bg-gray-400 font-bold uppercase tracking-widest rounded-lg my-4 text-sm">Submit</button>
    </form>
</div>
